{
  "name": "lottery-v1",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test-hardhat": "npx hardhat test",
    "compile": "npx hardhat compile",
    "deploy": "npx hardhat run packages/cli/scripts/deploy.js --network polygon",
    "test": "npx hardhat run packages/cli/scripts/test-contract.js --network polygon",
    "setup-vrf": "npx hardhat run packages/cli/scripts/setup-vrf.js --network polygon",
    "status": "npx hardhat run packages/cli/scripts/lottery-status.js --network polygon",
    "verify-contract": "npx hardhat run packages/cli/scripts/verify-contract.js --network polygon",
    "flatten": "npx hardhat flatten packages/contracts/contracts/LuckyOne.sol",
    "node": "npx hardhat node",
    "console": "npx hardhat console",
    "app": "cd packages/app && npm run dev",
    "app:build": "cd packages/app && npm run build",
    "buy-tickets": "TICKETS=${TICKETS:-1} npx hardhat run packages/cli/scripts/buy-tickets.js --network polygon",
    "end-lottery": "npx hardhat run packages/cli/scripts/end-lottery.js --network polygon",
    "restart-lottery": "npx hardhat run packages/cli/scripts/restart-lottery.js --network polygon",
    "claim-prize": "npx hardhat run packages/cli/scripts/claim-prize.js --network polygon",
    "withdraw-fees": "npx hardhat run packages/cli/scripts/withdraw-fees.js --network polygon",
    "player-info": "npx hardhat run packages/cli/scripts/player-info.js --network polygon",
    "setup-existing-contract": "node packages/cli/scripts/setup-existing-contract.js"
  },
